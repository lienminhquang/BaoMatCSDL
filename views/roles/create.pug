
extends ../../layouts/header.pug
block content
  .container
    h2 Create role
        
    if errors
        each error in errors
            .alert.alert-danger= error
           
    form.was-validated(action='/roles/create', method='POST')
        .form-group
            label(for='role') Role:
            input#role.form-control(type='text', placeholder='Enter role name', name='role', required='')
            .valid-feedback Valid.
            .invalid-feedback Please fill out this field.
        .form-group
            label(for='password_required') Password required:
            select#password_required.form-control(name='password_required')
                option(value='YES') YES
                option(value='NO', selected='') NO
                option(value='GLOBAL') GLOBAL
        .form-group
            label(for='password') Password:
            input#password.form-control(type='text', placeholder='Enter password', name='password')
            
    
        button.btn.btn-primary(type='submit') Create
