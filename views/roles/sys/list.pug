extends ../../../layouts/header
block content
    .container
        h2 List sys privilege granted to role
        
        if errors
            each error in errors
                .alert.alert-danger= error
        br
        div 
            table.table.table-hover.table-bordered
                thead
                    tr
                        th Role
                        th Privilege
                        th Admin option
                        th Common
                        th Inherited
                        th 
                tbody
                    if list
                        each priv in list
                            tr
                                td=priv.role
                                td=priv.privilege
                                td=priv.admin_option
                                td=priv.common
                                td=priv.inherited
                                td
                                    a.btn.btn-primary(href="/privileges/sys/revoke?priv=" + priv.privilege + "&username=" + priv.role + "&source=/roles/sys/list") Revoke
        br
        a.btn.btn-primary(href="/privileges/sys/grant") Grant