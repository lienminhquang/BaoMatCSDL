extends ../../../layouts/header
block content
    .container
        h2 List table privilege
        
        if errors
            each error in errors
                .alert.alert-danger= error
        
         
        table.table.table-hover.table-bordered
            thead
                tr
                    th GRANTEE
                    th OWNER
                    th TABLE_NAME
                    th COLUMN_NAME
                    th GRANTOR
                    th PRIVILEGE
                    th GRANTABLE
                    th COMMON
                    th INHERITED
                    th

            tbody
                each priv in list
                    tr
                        th=priv.GRANTEE
                        th=priv.OWNER
                        th=priv.TABLE_NAME
                        th=priv.COLUMN_NAME
                        th=priv.GRANTOR
                        th=priv.PRIVILEGE
                        th=priv.GRANTABLE
                        th=priv.COMMON
                        th=priv.INHERITED
                        th
                            a.btn.btn-primary(href="/privileges/col/revoke?priv=" + priv.PRIVILEGE + '&grantee=' + priv.GRANTEE + '&table_name=' + priv.TABLE_NAME + '&column_name=' + priv.COLUMN_NAME + '&owner=' + priv.OWNER) Revoke
        
        br
        a.btn.btn-primary(href="/privileges/col/grant") Grant
               
