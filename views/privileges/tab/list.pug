extends ../../../layouts/header
block content
    .container
        h2 List table privilege
        
        if errors
            each error in errors
                .alert.alert-danger= error
        
         
        table.table.table-hover.table-bordered
            thead
                tr
                    th GRANTEE
                    th OWNER
                    th TABLE_NAME
                    th GRANTOR
                    th PRIVILEGE
                    th GRANTABLE
                    th TYPE
                    th INHERITED
                    th

            tbody
                if list
                    each priv in list
                        tr
                            td=priv.GRANTEE
                            td=priv.OWNER
                            td=priv.TABLE_NAME
                            td=priv.GRANTOR
                            td=priv.PRIVILEGE
                            td=priv.GRANTABLE
                            td=priv.TYPE
                            td=priv.INHERITED
                            td
                                a.btn.btn-primary(href="/privileges/tab/revoke?priv=" + priv.PRIVILEGE + "&table_name=" + priv.TABLE_NAME + "&grantee=" + priv.GRANTEE + "") Revoke
       
        br
        a.btn.btn-primary(href="/privileges/tab/grant") Grant
