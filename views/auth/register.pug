doctype html
head
  title User manager
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js')
.container
  h2 Register
  form.was-validated(action='/auth/register')
    .form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Enter name', name='name', required='')
      .valid-feedback Valid.
      .invalid-feedback Please fill out this field.
    .form-group
      label(for='uname') User name:
      input#uname.form-control(type='text', placeholder='Enter user name', name='uname', required='')
      .valid-feedback Valid.
      .invalid-feedback Please fill out this field.
    .form-group
      label(for='pwd') Password:
      input#pwd.form-control(type='password', placeholder='Enter password', name='pswd', required='')
      .valid-feedback Valid.
      .invalid-feedback Please fill out this field.
    button.btn.btn-primary(type='submit') Submit
